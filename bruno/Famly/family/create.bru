meta {
  name: create
  type: http
  seq: 1
}

post {
  url: {{baseUrl}}/v1/families
  body: json
  auth: inherit
}

body:json {
  {
    "name": "testfamily"
  }
}

settings {
  encodeUrl: true
  timeout: 0
}

script:post-response {
  try {
    const body = res.body;

    if (body?.familyId) {
      bru.setEnvVar('currentFamilyId', body.familyId);
    }
  } catch (error) {
    console.log('Failed to persist family ID: ' + error?.message);
  }
}
