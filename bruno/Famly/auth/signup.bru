meta {
  name: signup
  type: http
  seq: 1
}

post {
  url: {{baseUrl}}/v1/auth/register
  body: json
  auth: inherit
}

body:json {
  {
    "email": "user@example.com",
    "password": "securePassword123",
    "name": "John Doe"  // Optional, defaults to email prefix
  }
}

settings {
  encodeUrl: true
  timeout: 0
}
