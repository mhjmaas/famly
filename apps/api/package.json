{
  "name": "api",
  "version": "0.1.0",
  "private": true,
  "description": "Famly API service exposing a health endpoint.",
  "main": "dist/server.js",
  "types": "dist/server.d.ts",
  "scripts": {
    "build": "tsc --project tsconfig.json; tsc-alias -p tsconfig.json",
    "dev": "PORT=3001 tsx watch src/server.ts",
    "start": "node dist/server.js",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "jest --config jest.config.unit.js",
    "test:e2e": "jest --config jest.config.e2e.js --runInBand",
    "test:watch": "jest --config jest.config.unit.js --watch",
    "test:coverage": "jest --config jest.config.unit.js --coverage",
    "lint": "biome check",
    "lint:fix": "biome check --write",
    "format": "biome format --write",
    "prepare": "husky"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.927.0",
    "@famly/shared": "workspace:*",
    "bcrypt": "^6.0.0",
    "better-auth": "^1.4.0",
    "cors": "^2.8.5",
    "cron": "^4.3.3",
    "dotenv": "^17.2.3",
    "express": "^4.19.2",
    "express-rate-limit": "^8.2.1",
    "express-oas-generator": "^1.0.48",
    "jose": "^6.1.0",
    "mongodb": "^6.12.0",
    "multer": "^2.0.2",
    "socket.io": "^4.8.0",
    "uuid": "^13.0.0",
    "web-push": "^3.6.7",
    "winston": "^3.14.2",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.6",
    "@testcontainers/mongodb": "^11.7.1",
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.16.11",
    "@types/socket.io": "^3.0.2",
    "@types/socket.io-client": "^3.0.0",
    "@types/supertest": "^6.0.2",
    "@types/web-push": "^3.6.4",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.4.1",
    "node-mocks-http": "^1.16.1",
    "socket.io-client": "^4.8.0",
    "supertest": "^7.0.0",
    "testcontainers": "^11.7.1",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3"
  }
}
