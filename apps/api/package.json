{
  "name": "api",
  "version": "0.1.0",
  "private": true,
  "description": "Famly API service exposing a health endpoint.",
  "main": "dist/server.js",
  "types": "dist/server.d.ts",
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "dev": "tsx watch src/server.ts",
    "start": "node dist/server.js",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "jest --config jest.config.unit.js",
    "test:e2e": "jest --config jest.config.e2e.js --runInBand",
    "test:watch": "jest --config jest.config.unit.js --watch",
    "test:coverage": "jest --config jest.config.unit.js --coverage"
  },
  "dependencies": {
    "better-auth": "^1.3.10",
    "cookie-parser": "^1.4.6",
    "dotenv": "^17.2.3",
    "express": "^4.19.2",
    "jose": "^6.1.0",
    "mongodb": "^6.12.0",
    "winston": "^3.14.2",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@testcontainers/mongodb": "^11.7.1",
    "@types/cookie-parser": "^1.4.8",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.16.11",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.4.1",
    "node-mocks-http": "^1.16.1",
    "supertest": "^7.0.0",
    "testcontainers": "^11.7.1",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3"
  }
}
