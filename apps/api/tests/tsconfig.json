{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "rootDir": "..",
    "types": ["jest", "node"],
    "baseUrl": "..",
    "paths": {
      "@/*": ["src/*"],
      "@config/*": ["src/config/*"],
      "@infra/*": ["src/infra/*"],
      "@lib/*": ["src/lib/*"],
      "@middleware/*": ["src/middleware/*"],
      "@modules/*": ["src/modules/*"],
      "@routes/*": ["src/routes/*"],
      "@tests/*": ["tests/*"]
    }
  },
  "include": ["../src/**/*.ts", "./**/*.ts"],
  "exclude": ["../node_modules", "../dist"]
}
