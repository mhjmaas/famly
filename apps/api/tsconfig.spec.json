{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "rootDir": ".",
    "types": ["jest", "node", "express", "multer"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@config/*": ["src/config/*"],
      "@infra/*": ["src/infra/*"],
      "@lib/*": ["src/lib/*"],
      "@middleware/*": ["src/middleware/*"],
      "@modules/*": ["src/modules/*"],
      "@locales/activity/*": ["src/locales/activity/*"],
      "@locales/*": ["src/locales/*"],
      "@routes/*": ["src/routes/*"],
      "@tests/*": ["tests/*"],
      "@famly/shared": ["../../packages/shared/src/index.ts"]
    }
  },
  "include": ["src/**/*.ts", "tests/**/*.ts"]
}
